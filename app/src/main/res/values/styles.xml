<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ButtonProducer" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/shape_producer</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="AppTheme.ButtonConsumer" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/shape_consumer</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
